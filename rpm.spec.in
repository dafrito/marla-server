Name: @PACKAGE_NAME@

Version:	@PACKAGE_VERSION@
Release:	@PACKAGE_RELEASE@%{?dist}
Summary:	@PACKAGE_SUMMARY@

License:	Apache license 2.0
URL:		@PACKAGE_URL@
Source0:	@PACKAGE_NAME@-@PACKAGE_VERSION@.tar.gz
BuildRoot:	%(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)
BuildArch:	x86_64
Requires:   apr-devel

%description
@PACKAGE_DESCRIPTION@

%prep
%setup -q

%build
make

%check

%install
mkdir -p %{buildroot}/%{_bindir}
mkdir -p %{buildroot}/%{_libdir}
mkdir -p %{buildroot}/%{_includedir}
cp marla %{buildroot}/%{_bindir}
cp libmarla.so %{buildroot}/%{_libdir}
cp src/marla.h %{buildroot}/%{_includedir}
cp environment_ws/libenvironment_ws.so %{buildroot}/%{_libdir}
cp servermod/libservermod.so %{buildroot}/%{_libdir}
mkdir -p %{buildroot}/%{_datadir}/parsegraph
mkdir -p %{buildroot}/%{_sysconfdir}/parsegraph

%package devel
Summary: Development libraries for @PACKAGE_NAME@

%description devel
Development libraries for Marla.

%files
%{_bindir}/*
%{_libdir}/libmarla.so
%{_datadir}/parsegraph
%{_sysconfdir}/parsegraph

%files devel
%{_includedir}/*

%package environment_ws
Summary: environment_ws module for Parsegraph

%description environment_ws
Module that provides the /environment/ routes for Parsegraph.

%files environment_ws
%{_libdir}/libenvironment_ws.so

%package servermod
Summary: servermod module for Parsegraph

%description servermod
Module that provides the Marla routes for Parsegraph.

%files servermod
%{_libdir}/libservermod.so
